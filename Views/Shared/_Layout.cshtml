<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Demo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                @Html.ActionLink("Home", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Add", "Create", "Employees", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Instructor", "Index", "Instructor", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Course", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Department", "Index", "Department", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center><p>&copy;@DateTime.Now.Year - Demo MVC</p></center>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
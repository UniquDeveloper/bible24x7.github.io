@{
    Layout = null;
}
<html dir="ltr" lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Image/favicon (2).ico" />
    <title>Bible_24x7</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <link href="~/Scripts/css/Style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Scripts/css/Boostrap.css" rel="stylesheet" />
    <script src="~/Scripts/js/moment.min.js"></script>
    <script src="~/Scripts/js/moment.js"></script>
</head>
<body data-gr-c-s-loaded="true" cz-shortcut-listen="true">
    <div id="container">
        <header id="header" class="navbar navbar-static-top">
            <div class="container-fluid">
                <div id="header-logo" class="navbar-header"><a class="navbar-brand"><h3><b>bible_24x7</b></h3></a></div>
                <a href="#" id="button-menu" class="hidden-md hidden-lg"><span class="fa fa-bars"></span></a>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @if (Session["UserName"] != null)
                            {
                                @Html.Label((String)Session["UserName"])
                            }
                            else
                            {
                                @Html.Label("")
                            }<i class="fa fa-caret-down fa-fw"></i>
                        </a>
                    </li>
                    <li>
                        <span class="hidden-xs hidden-sm hidden-md">
                            @if (Session["UserName"] != null)
                            {
                                @Html.ActionLink("Logout", "LogOut", "Login")
                            }
                            else
                            {
                                @Html.ActionLink("Login", "Login", "Login")
                            }
                        </span>
                    </li>
                </ul>
            </div>
        </header>
        @Html.Partial("_Sidebar")
        <div id="content">
            <div class="page-header">
                @RenderBody()
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
            </div>
        </div>
    </div>
    <footer id="footer"><a href="">Bible_24x7</a>© @DateTime.Now.Year All Rights Reserved.</footer>  
    <div class="jqvmap-label" style="display: none;"></div>
</body>
</html>
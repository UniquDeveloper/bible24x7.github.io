@model Demo.Crud.Mvc.Models.User
@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/_BibleLayout.cshtml";
}
<div class="container-lg">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Quiz</h3>
        </div>
        <div class="card-body">
            <div class="panel panel-default">
                <div class="panel-heading">Enter Your Fullname</div>
                <div class="panel-body">

                    @using (Html.BeginForm("GetUser", "BibleQuize", FormMethod.Post))
                    {
                        @Html.EditorFor(c => c.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "FullName ..." } })<br />
                        <button type="submit" id="Enter" class="btn btn-danger"><span class="icon icon-user"></span>Enter</button>
                    }

                </div>

                @if (ViewBag.Msg != null)
                {
                    <div class="well well-sm well-danger"> @ViewBag.Msg </div>
                }
            </div>

        </div>
    </div>
</div>
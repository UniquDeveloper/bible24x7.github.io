
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BibleLayout.cshtml";
}

<h4>Start Quiz</h4>
<div class="panel panel-default" style="width:50%;">
    <div class="panel-heading">Let's Begin</div>
    <div class="panel-body">

        @using (Html.BeginForm("Index", "BibleQuize", FormMethod.Post))
        {
            @Html.TextBox("FullName", null, new { @class = "form-control", @placeholder = "FullName ...", @style = "width:100%; margin-left: 56px;" })
            <br />
            <button type="submit" id="Enter" class="btn btn-info">
                <span class="glyphicon glyphicon-user"></span>Enter
            </button>
        }

    </div>

    @if (ViewBag.Msg != null)
    {
        <div class="well well-sm well-danger"> @ViewBag.Msg </div>
    }
</div>  
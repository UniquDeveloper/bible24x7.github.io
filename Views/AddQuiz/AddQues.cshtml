@model Demo.Crud.Mvc.Models.Question
@{
    //ViewBag.Title = "AddQues";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{

    var message = TempData["AlertMessege"] ?? string.Empty;
}
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Add Question</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddQues", "AddQuiz", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-horizontal">

                    <div class="form-group">
                       
                        @if (Model != null)
                        {
                            @Html.HiddenFor(model => model.QuestionID)
                        }

                        <div class="col-md-10">
                            <label>Question</label>
                            @Html.EditorFor(model => model.QuestionText, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.QuestionText, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <div class="col-md-10">
                            <label>Set</label>
                            @Html.DropDownList("QuizID", ViewBag.quiz as SelectList, "--Select Set--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.QuizID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @if (Model != null)
                            {
                                <input type="submit" value="Edit" class="btn btn-info" />
                            }
                            else
                            {
                                <input type="submit" value="Add" class="btn btn-info" />
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    debugger;
    var message = '@message';
    if (message) {
        alert(message);
    }
</script>
